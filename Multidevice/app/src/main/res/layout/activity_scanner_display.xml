<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.pierrelafuma.multideviceetendumaquette.ScannerDisplayActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scanner"
        android:background="@drawable/selector_button"
        android:id="@+id/buttonScan"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Menu principal"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/><![CDATA[

    />

    ]]>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profils"
        android:background="@drawable/selector_button"
        android:id="@+id/_buttonProfil"
        android:layout_below="@+id/buttonScan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:layout_alignRight="@+id/buttonScan"
        android:layout_alignEnd="@+id/buttonScan"
        android:textColor="#FFFFFF" />/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deconnexion"
        android:background="@drawable/selector_button"
        android:id="@+id/_buttonDeconnexion"
        android:layout_below="@+id/_buttonProfil"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:layout_alignRight="@+id/_buttonProfil"
        android:layout_alignEnd="@+id/_buttonProfil"
        android:textColor="#FFFFFF" />

</RelativeLayout>
